<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="AppTheme" parent="BaseAppTheme">
        <!-- 去除默认阴影 -->
        <item name="android:elevation">0dp</item>
        <item name="android:outlineProvider">none</item>
        <!-- 设置底部导航颜色 -->
        <item name="android:navigationBarColor">@color/colorAccent</item>
        <!-- 主题颜色 分割线 -->
        <!-- App的主要颜色 -->
        <item name="colorPrimary">@color/colorNighPrimary</item>
        <!-- 主色上显示内容的颜色-->
        <item name="colorOnPrimary">@color/colorNightOnSurface</item>
        <!-- App的次要颜色 -->
        <item name="colorPrimaryDark">@color/colorNightDarkPrimary</item>
        <item name="colorAccent">@color/colorNightAccent</item>
        <!-- 部件的表面颜色，如卡片、表格、菜单等 -->
        <item name="colorSurface">@color/colorNightSurface</item>
        <!-- 部件显示的内容的颜色-->
        <item name="colorOnSurface">@color/colorNightOnSurface</item>
        <!-- 错误显示的颜色-->
        <item name="colorError">@color/color_EA4E3D</item>
        <!-- 文字的主色 -->
        <item name="android:textColorPrimary">@color/colorNightOnSurface</item>
        <!-- 文字的二级颜色 -->
        <item name="android:textColorSecondary">@color/colorNightOnSurface</item>

        <!-- 正常状态下图标/控件的颜色 -->
        <item name="colorControlNormal">?attr/colorOnPrimary</item>
        <!-- 激活状态下图标/控件的颜色（例如 checked） -->
        <item name="colorControlActivated">?attr/colorAccent</item>

        <!-- 应用窗口（Activity、Dialog等）背景色-->
        <item name="android:windowBackground">@color/colorNightWindowBackground</item>
        <!-- 主题颜色分割线 -->

        <!-- 主题大小 分割线 -->
        <!-- ActionBar、Toolbar的高度 -->
        <item name="actionBarSize">@dimen/dp_48</item>
        <!-- 列表项的标准高度 (最小值) -->
        <item name="listPreferredItemHeight">@dimen/dp_58</item>

        <!-- 主题大小 分割线 -->
        <!--  主题动画分割线     -->
        <!-- 想使用5.0的Activity过渡动画，就要加上这个，或者在代码里面设置 -->
        <item name="android:windowContentTransitions">true</item>
        <!--下面的内容要在5.0上才好用,启用转换过程都会更加流畅自然,指定进入和退出的动画可以重叠 -->
        <item name="android:windowAllowEnterTransitionOverlap">false</item>
        <item name="android:windowAllowReturnTransitionOverlap">false</item>


        <!-- 左上角返回Icon -->
        <item name="homeAsUpIndicator">@drawable/ic_back</item>

        <!-- 自定义 SearchView 的样式 -->
        <item name="searchViewStyle">@style/Widget.Wan.SearchView</item>
        <item name="toolbarStyle">@style/Widget.Wan.Toolbar</item>
        <item name="tabStyle">@style/Widget.Wan.TabLayout</item>
        <item name="appBarLayoutStyle">@style/Widget.Wan.AppBarLayout</item>
        <item name="bottomNavigationStyle">@style/Widget.Wan.BottomNavigationView</item>
        <item name="floatingActionButtonStyle">@style/Widget.Wan.FloatingActionButton</item>
    </style>

</resources>