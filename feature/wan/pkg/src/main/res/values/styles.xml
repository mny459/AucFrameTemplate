<resources>
    <!-- Style 只作用于单个 Widget，不具备继承传递性质 -->
    <!-- 文本 14sp -->
    <style name="ArticleMain" parent="TextAppearance.AppCompat.Body2" />
    <!--  文本 12sp  -->
    <style name="ArticleSecondary" parent="TextAppearance.AppCompat.Caption" />


    <style name="CommonTextView" parent="TextAppearance.AppCompat">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/sp_14</item>
        <item name="android:textColor">@color/colorPrimaryText</item>
    </style>

    <style name="CommonTextView.Secondary">
        <item name="android:textColor">@color/colorSecondaryText</item>
    </style>

    <style name="CommonTextView.Small">
        <item name="android:textSize">@dimen/sp_12</item>
    </style>

    <style name="CommonTextView.Small.Secondary">
        <item name="android:textColor">@color/colorSecondaryText</item>
    </style>

    <style name="CommonTextView.Large">
        <item name="android:textSize">@dimen/sp_16</item>
    </style>

    <style name="CommonTextView.Large.Secondary">
        <item name="android:textColor">@color/colorSecondaryText</item>
    </style>

    <style name="ViewLine">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/line</item>
        <item name="android:background">@color/gray_eceff3</item>
    </style>

    <style name="ViewLine.1DP">
        <item name="android:layout_height">@dimen/dp_1</item>
        <item name="android:background">@color/gray_d7dce8</item>
    </style>

    <style name="ViewLine.V">
        <item name="android:layout_width">@dimen/line</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <style name="ViewLine.1DP.V">
        <item name="android:layout_width">@dimen/dp_1</item>
        <item name="android:layout_height">match_parent</item>
    </style>
    <!--  Toolbar 上面的搜索的样式  -->
    <style name="Wan.SearchView" parent="Widget.AppCompat.SearchView">
        <!--修改搜索框左边的搜索按钮图标-->
        <item name="searchHintIcon">@null</item>
    </style>

    <style name="Wan.BottomNavigationView" parent="Widget.MaterialComponents.BottomNavigationView" />

    <style name="Wan.FloatingActionButton" parent="Widget.MaterialComponents.FloatingActionButton">
        <item name="android:background">?attr/colorAccent</item>
        <item name="tint">?attr/colorOnPrimary</item>
    </style>

    <style name="Wan.AppBarLayout" parent="Widget.MaterialComponents.AppBarLayout.Primary">
    </style>

    <style name="Wan.Toolbar" parent="Widget.MaterialComponents.Toolbar">
    </style>

    <style name="Wan.TabLayout" parent="Widget.MaterialComponents.TabLayout.PrimarySurface">
    </style>

</resources>
