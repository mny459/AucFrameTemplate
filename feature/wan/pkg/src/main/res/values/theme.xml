<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!--  Theme 和 Theme Overlay  -->
    <style name="BaseAppTheme" parent="Theme.MaterialComponents.NoActionBar">
        <!-- 主题颜色 分割线 -->
        <!-- App的主要颜色 -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <!-- 主色上显示内容的颜色-->
        <item name="colorOnPrimary">@color/color_FFFFFF</item>
        <!-- App的次要颜色 -->
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <!-- 部件的表面颜色，如卡片、表格、菜单等 -->
        <item name="colorSurface">@color/color_F7F7F8</item>
        <!-- 部件显示的内容的颜色-->
        <item name="colorOnSurface">@android:color/black</item>
        <!-- 错误显示的颜色-->
        <item name="colorError">@color/color_EA4E3D</item>
        <!-- 文字的主色 -->
        <item name="android:textColorPrimary">@color/color_0C101B</item>
        <!-- 文字的二级颜色 -->
        <item name="android:textColorSecondary">@color/color_B6B7BA</item>

        <!-- 正常状态下图标/控件的颜色 -->
        <item name="colorControlNormal">?attr/colorOnPrimary</item>
        <!-- 激活状态下图标/控件的颜色（例如 checked） -->
        <item name="colorControlActivated">?attr/colorPrimary</item>

        <!-- 应用窗口（Activity、Dialog等）背景色-->
        <item name="android:windowBackground">@color/windowsBackground</item>
        <!-- 主题颜色分割线 -->

        <!-- 主题大小 分割线 -->
        <!-- ActionBar、Toolbar的高度 -->
        <item name="actionBarSize">@dimen/dp_48</item>
        <!-- 列表项的标准高度 (最小值) -->
        <item name="listPreferredItemHeight">@dimen/dp_48</item>

        <!-- 主题大小 分割线 -->
        <!--  主题动画分割线     -->
        <!-- 想使用5.0的Activity过渡动画，就要加上这个，或者在代码里面设置 -->
        <item name="android:windowContentTransitions">true</item>
        <!--下面的内容要在5.0上才好用,启用转换过程都会更加流畅自然,指定进入和退出的动画可以重叠 -->
        <item name="android:windowAllowEnterTransitionOverlap">false</item>
        <item name="android:windowAllowReturnTransitionOverlap">false</item>


        <!-- 左上角返回Icon -->
        <item name="homeAsUpIndicator">@drawable/ic_back</item>

        <!-- 初始化自己定义的3个属性值 -->
        <item name="toolbarTitleSize">18sp</item>
        <item name="toolbarTitleColor">@color/white_alpha_224</item>
        <item name="toolbarMenuIconColor">@color/white_alpha_224</item>
        <!-- 自定义 SearchView 的样式 -->
        <item name="searchViewStyle">@style/Widget.SearchView</item>
        <item name="android:searchViewStyle">@style/Widget.SearchView</item>
    </style>

    <style name="BaseAppTheme.SplashTheme">
        <item name="android:windowBackground">@drawable/splash</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme" parent="BaseAppTheme">
        <!-- 去除默认阴影 -->
        <item name="android:elevation">0dp</item>
        <item name="android:outlineProvider">none</item>
        <!-- 设置底部导航颜色 -->
        <item name="android:navigationBarColor">@color/colorAccent</item>
    </style>

    <style name="AppTheme.TransStatusBar.Base" parent="AppTheme">
        <!--去除顶部的状态栏-->
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowAnimationStyle">@null</item>
        <item name="android:windowIsFloating">false</item>
        <item name="android:windowFrame">@null</item>
    </style>

    <style name="AppTheme.TransStatusBar" parent="AppTheme.TransStatusBar.Base">
        <item name="android:statusBarColor">@null</item>
    </style>

    <style name="TextAppearance.Title" parent="@style/TextAppearance.AppCompat.Title">
        <item name="android:textSize">?attr/toolbarTitleSize</item>
        <item name="android:textColor">?attr/toolbarTitleColor</item>
    </style>


</resources>